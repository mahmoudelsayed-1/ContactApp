<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F3F3F3"

    >


    <EditText
        android:id="@+id/edit_txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_margin="10dp"
        />
    <EditText
        android:id="@+id/edit_txt_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_txt_name"
        android:layout_marginTop="15dp"
        android:layout_margin="10dp"
        />
    <EditText
        android:id="@+id/edit_txt_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Your Describtion (Optional)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_txt_phone"
        android:layout_marginTop="15dp"
        android:layout_margin="10dp"
        />
    
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_txt_desc"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="21sp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_save"
        android:layout_marginTop="22dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/contact_item"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>